{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "es5", // Modified for broader browser support
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["dom", "es6"],
    "declaration": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
